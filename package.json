{
  "name": "backend-barber",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "nodemon --watch src --exec \"ts-node-dev --respawn --transpile-only src/server.ts\"",
    "build": "tsc -p .",
    "start": "node --enable-source-maps ./src/app.ts",
    "migrate:latest": "npx knex migrate:latest --knexfile ./knexfile.cjs",
    "seed:run": "npx knex seed:run --knexfile ./knexfile.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
